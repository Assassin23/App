<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/navigation_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="0dp"
        tools:context=".NavigationDrawerFragment" />

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/navigation_deactivated"
        />

    <LinearLayout
        android:id="@+id/navigation_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_about" />

        <TextView
            android:id="@+id/navigation_about_title"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:textColor="@color/navigation_deactivated"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="@string/navigation_about_title" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/navigation_deactivated"
        />

    <LinearLayout
        android:id="@+id/navigation_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_settings" />

        <TextView
            android:id="@+id/navigation_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true"
            android:paddingLeft="6dp"
            android:textColor="@color/navigation_deactivated"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/navigation_settings_title" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/navigation_deactivated"
        />

    <LinearLayout
        android:id="@+id/navigation_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_help_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_help" />

        <TextView
            android:id="@+id/navigation_help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true"
            android:paddingLeft="6dp"
            android:textColor="@color/navigation_deactivated"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/navigation_help_title" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/navigation_deactivated"
        />
</LinearLayout>